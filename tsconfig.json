{
  "compilerOptions": {
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": false,
    "strictFunctionTypes": false,
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@interface/*": ["interface/*"],
      "@server/*": ["server/*"],
      "@view/*": ["view/*"]
    }
  },
  "lib": [
    "es5",
    "es2015",
    "es2016",
    "es2017"
  ],
  "exclude": [
    "node_modules",
    ".idea"
  ],

}